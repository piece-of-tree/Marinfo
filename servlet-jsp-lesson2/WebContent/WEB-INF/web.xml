<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>servlet-jsp-lesson2</display-name>
  <context-param>
    <param-name>/login.do</param-name>
    <param-value>jp.co.comnic.lesson.yoneyama.webapp.controller.LoginAction</param-value>
  </context-param>
  <context-param>
    <param-name>/logout.do</param-name>
    <param-value>jp.co.comnic.lesson.yoneyama.webapp.controller.LogoutAction</param-value>
  </context-param>
  <context-param>
    <param-name>/sign-up.do</param-name>
    <param-value>jp.co.comnic.lesson.yoneyama.webapp.controller.SignUpAction</param-value>
  </context-param>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>top</servlet-name>
    <jsp-file>/top.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>top</servlet-name>
    <url-pattern>/top</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sign-up</servlet-name>
    <jsp-file>/sign-up.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>sign-up</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>
</web-app>